<RadioButton
    x:Class="SatisfactorySmartHub.Presentation.Controls.MenueButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SatisfactorySmartHub.Presentation.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="125"
    mc:Ignorable="d">

    <RadioButton.Template>
        <ControlTemplate TargetType="RadioButton">
            <Grid Height="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image
                    Name="Image"
                    Grid.Column="0"
                    Width="15"
                    Height="15"
                    Source="/SatisfactorySmartHub.Presentation;component/Assets/Home.png" />
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="{TemplateBinding Content}" />
            </Grid>
        </ControlTemplate>
    </RadioButton.Template>
</RadioButton>
